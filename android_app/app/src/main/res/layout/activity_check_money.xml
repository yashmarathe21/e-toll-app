<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="text"
        android:hint="Enter your License No"
        android:paddingBottom="15.0dip"
        android:id="@id/editTextLicenseNo"
        android:textColorHint="@color/colorBlack"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@id/buttonCheckMoney"
        android:textAllCaps="false"
        android:text="Check Money"
        android:layout_margin="7.0dip"
        android:background="@drawable/rounded_button_transparent"
        android:layout_gravity="center"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@id/textview"
        android:text="Money in your account"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="50.0dip"
        android:layout_marginLeft="20.0dip"
        android:textSize="25.0dip"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@id/textviewMoney"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="50.0dip"
        android:layout_marginLeft="75.0dip"
        android:textSize="80.0dip"/>

</LinearLayout>